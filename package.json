{
  "name": "promoforge-backend",
  "version": "1.0.0",
  "description": "Backend API for PromoForge promo code management system",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node scripts/run-tests.js",
    "test:simple": "npx jest tests/simple.test.js --config jest.simple.config.js",
    "test:api-offline": "npx jest tests/api-offline.test.js --config jest.simple.config.js",
    "test:watch": "jest --watch --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:auth": "jest tests/auth.test.js --detectOpenHandles --forceExit",
    "test:promo": "jest tests/promo.test.js --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration.test.js --detectOpenHandles --forceExit",
    "test:health": "jest tests/health.test.js --detectOpenHandles --forceExit",
    "setup-db": "node scripts/setup-database.js",
    "reset-db": "node scripts/reset-database.js",
    "check-db": "node scripts/check-database.js",
    "test-routes": "node scripts/test-routes.js",
    "test-swagger": "node scripts/test-swagger.js",
    "postinstall": "node scripts/setup-database.js"
  },
  "keywords": [
    "promo",
    "codes",
    "api",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=24.10.0"
  }
}
